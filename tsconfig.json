{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@monitor/monitor": [
        "libs/monitor/src"
      ],
      "@monitor/monitor/*": [
        "libs/monitor/src/*"
      ],
      "@authz/authz": [
        "libs/authz/src"
      ],
      "@authz/authz/*": [
        "libs/authz/src/*"
      ],
      "@influx/influx": [
        "libs/influx/src"
      ],
      "@influx/influx/*": [
        "libs/influx/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}